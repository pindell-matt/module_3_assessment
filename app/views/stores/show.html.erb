<h1><%= @store.name %></h1>

<div class="location">
  <h3>
    Address: <%= @store.city %>, <%= @details["stores"].first["region"] %> <%= @details["stores"].first["postalCode"] %>
  </h3>
</div>

<div class="hours">
  <ul>
    <% @details["stores"].first["detailedHours"].each do |hours| %>
      <li>
        <%= hours %>
      </li>
    <% end %>
  </ul>
</div>
