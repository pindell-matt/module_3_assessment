<h1>Search Results</h1>
<h3><%= @results['total'] %> Total Stores</h3>

<div class="stores">
  <ul>
    <% @stores.each do |store| %>
      <li>
        <%= link_to store.name, store_path(store.id) %>: <%= store.city %>, <%= store.distance %>, <%= store.phone %>, <%= store.store_type %>
      </li>
    <% end %>
  </ul>
</div>
